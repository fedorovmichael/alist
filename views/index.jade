extends layout

block content
  input(id="hdnSelectedList" type="hidden")
  input(id="hdnEditList" type="hidden")
  div(class="panel panel-default div-entity-container")
    a(id="aCollapseList" href="#")
      img(style="width:24px; height:24px;" src="images/navigate.png")
    div(id="divListsContainer" class="panel-body div-entity-body")
      form(id="formCreateList" style="margin-bottom:10px;")
        input(id="txtListName" type="textbox" style="width:240px;")
        a(id="aNewList" href="#")
          img(id="imgNewList" src="images/add.png")
      ul(id="ulLists" class="nav nav-pills nav-stacked")        
  
  div(id="divItems" class="div-entity-body" style="float:left; width:300px;")
    div(class='panel', id="mainMenu")
      ul(class="nav nav-tabs")
        li
          a(id="aFullList", href="#") Full List
        li
          a(id="aSelectedList", href="#") Selected List
        li
          a(id="aClearAll" href="#")
            img(src="images/clear.png")
    
    div(class="panel", id="containerFullList")
      h3(class="panel-header", style="")

    div(class="panel", id="containerSelectedList")
      h3(class="panel-header")
      button(id='btnRefresh', style='display:none;')
      
  div(id="divEditItems" class="div-entity-body" style="float:left; display:none; width:400px;")
    div(class="panel", id="containerEditList")
      h3(class="panel-header", style="")
      form(id="formEditNewItem")
        input(id="txtEditNewItemName", type="textbox")
        a(id="aEditNewItem", href="#")
          img(id="imgEditNewItem", src="images/add.png")
      ul(id="ulEditItems", class="nav nav-pills nav-stacked")
